<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/selector_def_item">
    <ImageView
            android:id="@+id/iv_shoplist_item_snap"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:layout_margin="15dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitCenter"
            android:contentDescription="@null"
            android:src="@drawable/pic_bg"
            android:background="@drawable/image_bg_frame"/>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:orientation="vertical">

        <TextView
                android:id="@+id/tv_shoplist_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:textColor="@color/DeepSkyBlue"
                android:textSize="@dimen/font_size_default"/>

        <TextView
                android:id="@+id/tv_shoplist_item_shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:drawableLeft="@drawable/location_bg"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/DeepSkyBlue"
                android:textSize="@dimen/font_size_small"/>

        <TextView
                android:id="@+id/tv_shoplist_item_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:drawableLeft="@drawable/tel_bg"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/DeepSkyBlue"
                android:textSize="@dimen/font_size_small"/>

        <TextView
                android:id="@+id/tv_shoplist_item_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:drawableLeft="@drawable/detail_bg"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/DeepSkyBlue"
                android:textSize="@dimen/font_size_small"/>
    </LinearLayout>

</LinearLayout>