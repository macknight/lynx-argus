<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

	<com.lynx.lib.widget.pulltorefresh.PullToRefreshListView
			android:id="@+id/prlv_campaignlist"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:cacheColorHint="@android:color/transparent"
			android:divider="@drawable/horizontal_divider"
			android:listSelector="@android:color/transparent"
			android:scrollbars="none"
			android:numColumns="2"
			android:stretchMode="columnWidth">
	</com.lynx.lib.widget.pulltorefresh.PullToRefreshListView>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:gravity="center_horizontal"
			android:layout_alignParentBottom="true"
			android:background="@color/Translucent">

		<ImageButton
				android:id="@+id/ib_campaignlist_lst"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:paddingLeft="25dp"
				android:paddingRight="25dp"
				android:contentDescription="@null"
				android:background="@drawable/selector_def_item"
				android:src="@drawable/lst"/>
		<ImageButton
				android:id="@+id/ib_campaignlist_next"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:paddingLeft="25dp"
				android:paddingRight="25dp"
				android:contentDescription="@null"
				android:background="@drawable/selector_def_item"
				android:src="@drawable/next"/>
	</LinearLayout>
</RelativeLayout>