<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:orientation="horizontal">

    <ImageView android:id="@+id/iv_local_spinner_category_item_icon"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:layout_marginBottom="10dp"
               android:layout_marginLeft="15dp"
               android:layout_centerVertical="true"
               android:src="@drawable/category_all"/>

    <TextView android:id="@+id/tv_local_spinner_category_item_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="15dp"
              android:layout_gravity="center_vertical"
              android:layout_toRightOf="@+id/iv_local_spinner_category_item_icon"
              android:textColor="@color/Grey"
              android:textSize="@dimen/font_size_large"
              android:text="food"/>
</LinearLayout>