<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/selector_btn">

	<ImageView android:id="@+id/iv_local_shoplist_item_icon"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_marginLeft="15dp"
	           android:layout_centerVertical="true"
	           android:contentDescription="@null"
	           android:src="@drawable/star_green"/>

	<TextView android:id="@+id/tv_local_shoplist_item_name"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_marginTop="5dp"
	          android:layout_marginLeft="10dp"
	          android:layout_marginRight="10dp"
	          android:layout_toRightOf="@+id/iv_local_shoplist_item_icon"
	          android:singleLine="true"
	          android:ellipsize="end"
	          android:textColor="@color/Grey"
	          android:textSize="@dimen/font_size_large"
	          android:text="红翻天湖北风味小吃店"/>

	<TextView android:id="@+id/tv_local_shoplist_item_addr"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_marginTop="5dp"
	          android:layout_marginLeft="10dp"
	          android:layout_marginRight="10dp"
	          android:layout_toRightOf="@+id/iv_local_shoplist_item_icon"
	          android:layout_below="@+id/tv_local_shoplist_item_name"
	          android:singleLine="true"
	          android:ellipsize="end"
	          android:textColor="@color/Thistle"
	          android:textSize="@dimen/font_size_default"
	          android:text="上海市长宁区玉佩南路199弄"/>

	<TextView android:id="@+id/tv_local_shoplist_item_tele"
	          android:layout_width="wrap_content"
	          android:layout_height="match_parent"
	          android:layout_marginTop="5dp"
	          android:layout_marginLeft="10dp"
	          android:layout_marginRight="10dp"
	          android:layout_toRightOf="@+id/iv_local_shoplist_item_icon"
	          android:layout_below="@+id/tv_local_shoplist_item_addr"
	          android:singleLine="true"
	          android:ellipsize="end"
	          android:textColor="@color/Thistle"
	          android:textSize="@dimen/font_size_default"
	          android:text="13201400591"/>
</RelativeLayout>