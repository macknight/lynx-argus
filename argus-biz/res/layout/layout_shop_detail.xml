<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView android:id="@+id/tv_shop_detail_name"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="@color/Grey"
              android:textSize="@dimen/font_size_large"
              android:text="name"/>
    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@drawable/horizontal_divider"/>

    <TextView android:id="@+id/tv_shop_detail_addr"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="@color/Grey"
              android:textSize="@dimen/font_size_large"
              android:text="addr"/>

    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@drawable/horizontal_divider"/>
    <TextView android:id="@+id/tv_shop_detail_price"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="@color/Grey"
              android:textSize="@dimen/font_size_large"
              android:text="price"/>

    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@drawable/horizontal_divider"/>
    <TextView android:id="@+id/tv_shop_detail_tele"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="@color/Grey"
              android:textSize="@dimen/font_size_large"
              android:text="tele"/>

    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@drawable/horizontal_divider"/>
    <TextView android:id="@+id/tv_shop_detail_tags"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="@color/Grey"
              android:textSize="@dimen/font_size_large"
              android:text="tags"/>

    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@drawable/horizontal_divider"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="5dp"
                  android:orientation="horizontal">
        <TextView android:id="@+id/tv_shop_detail_overall"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:textColor="@color/Grey"
                  android:textSize="@dimen/font_size_large"
                  android:text="综合:"/>
        <RatingBar android:id="@+id/rb_shop_detail_overall"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   style="@style/overall_rating_bar"
                   android:numStars="5"
                   android:layout_gravity="left|center_vertical"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="5dp"
                  android:orientation="horizontal">
        <TextView android:id="@+id/tv_shop_detail_taste_rating"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:textColor="@color/Grey"
                  android:textSize="@dimen/font_size_large"
                  android:text="口味:"/>
        <RatingBar android:id="@+id/rb_shop_detail_taste"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   style="@style/overall_rating_bar"
                   android:numStars="5"
                   android:layout_gravity="left|center_vertical"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="5dp"
                  android:orientation="horizontal">
        <TextView android:id="@+id/tv_shop_detail_service_rating"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:textColor="@color/Grey"
                  android:textSize="@dimen/font_size_large"
                  android:text="服务:"/>
        <RatingBar android:id="@+id/rb_shop_detail_service"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   style="@style/overall_rating_bar"
                   android:numStars="5"
                   android:layout_gravity="left|center_vertical"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="5dp"
                  android:orientation="horizontal">
        <TextView android:id="@+id/tv_shop_detail_env_rating"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:textColor="@color/Grey"
                  android:textSize="@dimen/font_size_large"
                  android:text="环境:"/>
        <RatingBar android:id="@+id/rb_shop_detail_env"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   style="@style/overall_rating_bar"
                   android:numStars="5"
                   android:layout_gravity="left|center_vertical"/>
    </LinearLayout>

    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@drawable/horizontal_divider"/>

    <TextView android:id="@+id/tv_shop_detail_shop_hours"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="@color/Grey"
              android:textSize="@dimen/font_size_large"
              android:text="11：00-23：00"/>


</LinearLayout>