<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/widget_black_bg"
              android:baselineAligned="false"
              android:orientation="vertical">

	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
		<TextView
				android:id="@+id/tv_weather_city"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@android:color/white"
				android:layout_margin="15dp"
				android:textSize="35dp"
				android:textStyle="bold"
				android:text="上海"/>

		<ImageView
				android:id="@+id/iv_weather_status"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/tv_weather_city"
				android:padding="15dp"
				android:contentDescription="@null"
				android:src="@drawable/day9"/>

		<TextView
				android:id="@+id/tv_weather_temp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:textColor="@android:color/white"
				android:textSize="35dp"
				android:textStyle="bold"
				android:text="14 C"/>
		<TextView
				android:id="@+id/tv_weather_detail_temp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/tv_weather_temp"
				android:layout_centerHorizontal="true"
				android:textColor="@android:color/white"
				android:textSize="15dp"
				android:textStyle="bold"
				android:text="17/9 C"/>

		<TextView
				android:id="@+id/tv_weather_plut"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="5dp"
				android:layout_alignParentRight="true"
				android:textColor="@color/GreenYellow"
				android:textSize="15dp"
				android:textStyle="bold"
				android:text="182(轻度污染)"/>

	</RelativeLayout>

	<ScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:scrollbars="none">

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

		</LinearLayout>
	</ScrollView>
</LinearLayout>

