<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/tool_bar">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/Grey"
                android:textSize="@dimen/font_size_xlarge"
                android:text="@string/shoplist_hint"/>
        <ImageButton
                android:id="@+id/ib_shop_detail_refresh"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/refresh"
                android:background="@drawable/selector_def_item"/>
    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7">
            <TextView
                    android:id="@+id/tv_shopdetail_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:layout_margin="10dp">
            <ImageView
                    android:id="@+id/iv_shoplist_item_snap"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitCenter"
                    android:contentDescription="@null"
                    android:src="@drawable/pic_bg"
                    android:background="@drawable/image_bg_frame"/>
            <TextView
                    android:id="@+id/tv_shopdetail_img_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_horizontal"
                    android:text="共有10张"
                    android:textColor="@color/Grey"
                    android:textSize="@dimen/font_size_default"
                    android:background="@color/Translucent"/>

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:background="@drawable/common_searchbox_home_bg">
        <TextView
                android:id="@+id/tv_shopdetail_item_addr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/location_bg"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:textColor="@color/DeepSkyBlue"
                android:textSize="@dimen/font_size_default"
                android:text="上南路3899弄（恒大翰城翰林苑）18号02室"/>

        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_marginTop="5dp"
              android:layout_marginBottom="5dp"
              android:background="@drawable/divider_h_gray"/>
        <TextView
                android:id="@+id/tv_shopdetail_item_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/tel_bg"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:textColor="@color/DeepSkyBlue"
                android:textSize="@dimen/font_size_default"
                android:text="50836037"/>

        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_marginTop="5dp"
              android:layout_marginBottom="5dp"
              android:background="@drawable/divider_h_gray"/>
        <TextView
                android:id="@+id/tv_shopdetail_item_worktime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/detail_bg"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:textColor="@color/DeepSkyBlue"
                android:textSize="@dimen/font_size_default"
                android:text="工作日12:00-20:00   双休：9:00-20:00"/>

        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_marginTop="5dp"
              android:layout_marginBottom="5dp"
              android:background="@drawable/divider_h_gray"/>
        <TextView
                android:id="@+id/tv_shopdetail_item_transport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/detail_bg"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:textColor="@color/DeepSkyBlue"
                android:textSize="@dimen/font_size_default"
                android:text="地铁6号线上南路站1号口即达"/>

        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_marginTop="5dp"
              android:layout_marginBottom="5dp"
              android:background="@drawable/divider_h_gray"/>
        <TextView
                android:id="@+id/tv_shopdetail_item_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/detail_bg"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:textColor="@color/DeepSkyBlue"
                android:textSize="@dimen/font_size_default"
                android:text="童绘视觉艺术中心是一家从事儿童艺术教育的研究、开发和实施的专业机构。我们引进美国专业艺术课程，为学龄前儿童提供系统的艺术教育。"/>

    </LinearLayout>


</LinearLayout>