<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

	<ImageView
			android:id="@+id/iv_msg_item_avatar"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="5dp"
			android:layout_alignParentLeft="true"
			android:contentDescription="@null"
			android:src="@drawable/default_avatar_shadow"/>

	<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="30dp"
			android:layout_marginBottom="5dp"
			android:background="@drawable/selector_msg_from"
			android:layout_toRightOf="@+id/iv_msg_item_avatar"
			android:orientation="vertical">
		<TextView
				android:id="@+id/tv_msg_item_content"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:paddingBottom="8dp"
				android:textColor="#FF000000"
				android:textSize="18sp"/>
		<TextView
				android:id="@+id/tv_msg_item_date"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:layout_marginLeft="5dp"
				android:layout_below="@+id/tv_msg_item_content"
				android:paddingBottom="2dp"
				android:paddingTop="2dp"
				android:textColor="#FF666666"
				android:textSize="10sp"/>
	</RelativeLayout>

</RelativeLayout>